@page "/registeruser"
@inject HttpClient Http
@code {
    private OnlineLibrary.Blazor.Models.UserRegistrationDto _user = new();
    private async Task RegisterUser()
    {
        var response = await Http.PostAsJsonAsync("api/Users/register", _user);
        if (response.IsSuccessStatusCode)
        {
            // handle success, navigate to login page or home page
        }
        else
        {
            // handle error
        }
    }
}

<h3>Register</h3>
<EditForm Model="_user" OnValidSubmit="RegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label>Username: </label>
        <InputText @bind-Value="_user.Username" />
    </div>
    <div>
        <label>Email: </label>
        <InputText @bind-Value="_user.Email" />
    </div>
    <div>
        <label>Password: </label>
        <InputText InputType="password" @bind-Value="_user.Password" />
    </div>
    <button type="submit">Register</button>
</EditForm>
